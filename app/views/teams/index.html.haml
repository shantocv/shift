- if user_signed_in?
  %h1 Teams
  %table.table
    %thead
      %tr
        %th Name
        %th
        %th
        %th
    %tbody
      - @teams.each do |team|
        %tr
          %td
            = team.name
          %td
            = link_to 'Show', team, class: "btn btn-primary white-color"
          %td
            = link_to 'Edit', edit_team_path(team), class: "btn btn-primary white-color"
          %td
            = link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary white-color"
          %td
            = link_to 'Add Member', add_member_teams_path(id: team.id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#exampleModal', class: 'btn btn-primary'}
  %br/
  = link_to 'New Team', new_team_path
/ Modal
#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
